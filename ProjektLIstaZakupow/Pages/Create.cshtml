@page
@model ProjektLIstaZakupow.Pages.CreateModel

@{
    ViewData["Title"] = "Dodaj produkt";
}

<h1>Dodaj produkt</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Produkt.Nazwa" class="control-label"></label>
                <input asp-for="Produkt.Nazwa" class="form-control" />
                <span asp-validation-for="Produkt.Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produkt.Rodzaj" class="control-label"></label>
                <select asp-for="Produkt.Rodzaj" class="form-control">
                    <option value="---">---</option>
                    <option value="Owoce">Owoce</option>
                    <option value="Warzywa">Warzywa</option>
                    <option value="Mięso">Mięso</option>
                    <option value="Nabiał">Nabiał</option>
                    <option value="Pieczywo">Pieczywo</option>
                    <option value="Przetwory">Przetwory</option>
                    <option value="Słodycze">Słodycze</option>
                    <option value="Napoje">Napoje</option>
                    <option value="Przyprawy">Przyprawy</option>
                    <option value="Inne">Inne</option>
                </select>
                <span asp-validation-for="Produkt.Rodzaj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Wróć do listy zakupów</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
